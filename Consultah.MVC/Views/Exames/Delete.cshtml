@model ConsultaH.MVC.ViewModels.ExameViewModel

@{
    ViewBag.Title = "Remover Exame";
}

<h2>Remover Exame</h2>

@if (!ViewBag.CanDelete)
{
    <h3>Esse tipo de exame não pode ser excluído pois ele está sendo usado em uma ou mais Consultas.</h3>
}
else
{
    <h3>Você tem certeza da remoção deste Tipo de Exame?</h3>
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observacoes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoExameID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoExame.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover Exame" class="btn btn-danger" @(!ViewBag.CanDelete ? "disabled" : "")/> |
            @Html.ActionLink("Voltar para Exames", "Index")
        </div>
    }
</div>
