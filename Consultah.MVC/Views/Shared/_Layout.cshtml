<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ConsultaH</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar nav-border navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index","Home")" class="navbar-brand"><span class="ch">C</span>onsulta<span class="ch">H</span></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "item-nav" })</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home", new { area = "" }, new { @class = "item-nav" })</li>
                    <li>@Html.ActionLink("Exames", "Index", "Exames", new { area = "" }, new { @class = "item-nav" })</li>
                    <li>@Html.ActionLink("Consultas", "Index", "Consultas", new { area = "" }, new { @class = "item-nav" })</li>
                    <li>@Html.ActionLink("Pacientes", "Index", "Pacientes", new { area = "" }, new { @class = "item-nav" })</li>
                    <li>@Html.ActionLink("Tipo de Exames", "Index", "TipoExames", new { area = "" }, new { @class = "item-nav" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ConsultaH</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
